/*----------------------------------------*\
  Download Item
\*----------------------------------------*/

.download-item {
  @apply flex pl-0 pb-4 pt-4 align-top border-b border-gray-200 text-left w-full;
  @apply hover:bg-secondary-100;
}

.download-item__icon {
  @apply text-red-600 pr-6;
}

.download-item__title {
  @apply font-bold;
}

.download-item__description {
  @apply pb-3;
}

.download-meta-info {
  @apply text-gray-400;
}

.download-item__meta-divider {
  @apply px-3;
}
