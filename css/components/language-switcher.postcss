/*----------------------------------------*\
  LANGUAGE SWITCHER
\*----------------------------------------*/

.language-switcher {
  @apply flex cursor-pointer;

  a {
    @apply flex items-center;
    @apply h-full px-4;
  }

  select {
    @apply cursor-pointer;
    @apply hover:text-text-300 focus:text-text-300;
  }

  option {
    &:disabled {
      @apply text-text-500;
    }
  }

  .select__icon {
    @apply w-7;
  }

}

