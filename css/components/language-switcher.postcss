/*----------------------------------------*\
  LANGUAGE SWITCHER
\*----------------------------------------*/

.language-switcher {
  @apply flex cursor-pointer;

  a {
    @apply flex items-center;
    @apply h-full px-4;
  }

  select {
    @apply cursor-pointer;
    @apply box-border w-[5em];

    @media screen(2xl) {
      @apply w-[4.5em];
    }
  }

  option {
    &:disabled {
      @apply text-text-500;
    }
  }

  .select__icon {
    @apply w-7;
    @apply transition-transform duration-200;
  }

  select:focus + .select__icon {
    @apply rotate-180;
  }

  .select {
    &:hover {
        select, .select__icon {
          @apply text-text-300;
        }
    }
  }
}

