/*----------------------------------------*\
  BREADCRUMB NAVIGATION
\*----------------------------------------*/

.breadcrumb-navigation {
    @apply flex h-16 -ml-4;
    @apply text-sm text-text-500;

    a {
        @apply flex items-center;
        @apply h-full px-4;
    }
}

.breadcrumb-navigation--mobile {
    @apply flex flex-col;
}

.breadcrumb-navigation--desktop {
    @apply hidden lg:flex h-full;

    ol {
        @apply flex;
    }
}
