/*----------------------------------------*\
  MAIN NAVIGATION
\*----------------------------------------*/

.main-navigation {
  a {
    @apply flex items-center;
    @apply h-full px-4;
  }
}

.main-navigation--mobile {
  @apply flex flex-col;
}

.main-navigation--desktop {
  @apply flex h-full;
  @apply hidden lg:flex;
  @apply h-14 xl:h-16 2xl:h-20;
  @apply -ml-4;
  @apply text-sm xl:text-base 2xl:text-lg;

  ul {
    @apply flex h-full;
  }
}
