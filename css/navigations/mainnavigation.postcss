/*----------------------------------------*\
  MAIN NAVIGATION
\*----------------------------------------*/

.main-navigation {
  @apply flex h-full;
  @apply h-20;

  a {
    @apply flex items-center;
    @apply h-full px-4;
  }
}

.main-navigation--mobile {
  @apply flex flex-col;
}

.main-navigation--desktop {
  @apply hidden lg:flex;
  @apply -ml-4;
  @apply text-base 2xl:text-lg;
  @apply border-b;

  ul {
    @apply flex h-full;
  }
}