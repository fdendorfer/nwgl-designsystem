{
  "name": "bund_ds",
  "version": "0.0.1",
  "description": "Design System for the Swiss Confederation",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "watch": "postcss css/main.postcss --ext css --dir dist --watch",
    "dev": "concurrently \"npm run watch \" \"npm run storybook --prefix app\"",
    "build": "concurrently \"postcss css/main.postcss --ext css --dir dist \" \"npm run build-storybook --prefix app\"",
    "build-css": "postcss css/main.postcss --ext css --dir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rotwurstesser/bund_ds.git"
  },
