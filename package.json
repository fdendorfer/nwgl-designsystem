  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rotwurstesser/bund_ds/issues"
  },
  "homepage": "https://github.com/rotwurstesser/bund_ds#readme",
  "dependencies": {
    "autoprefixer": "^10.2.6",
    "concurrently": "^6.2.0",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^2.1.3"
  }
}
